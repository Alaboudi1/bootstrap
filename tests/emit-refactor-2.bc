core :: module("core");

vector3 :: struct {
    x: s32;
    y: s32;
    z: s32;
};

class  :: struct {
    name: ^u8;
};

entity :: struct {
    pos: vector3;
    dir: vector3;
    cls: class;
};

test :: proc() {
    p: entity;
    p.pos.x := -5;
    p.pos.y := -6;
    p.pos.z := -122;

    p.dir.x := 0;
    p.dir.y := 1;
    p.dir.z := 1;

    p.cls.name := "warrior!";

    core::print("p.pos.x := %d\n", p.pos.x);
    core::print("p.pos.y := %d\n", p.pos.y);
    core::print("p.pos.z := %d\n", p.pos.z);
    core::print("p.dir.x := %d\n", p.dir.x);
    core::print("p.dir.y := %d\n", p.dir.y);
    core::print("p.dir.z := %d\n", p.dir.z);

    core::print("p.cls.name := %s\n", p.cls.name);
};

#run test();
