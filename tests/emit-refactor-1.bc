core :: module("../modules/core");

vector3 :: struct {
    x: f32 := 1;
    y: f32;
    z: f32;
};

temp :: proc() {
    pos: vector3;
    for i in range<u32>(0, 10) {
        x := i * 6;
        y := 16 * x;
        print("x := %d, y:= %d\n", x, y);
    };

    pos.x := 2.0;
    pos.y := 3.0;
    pos.z := 11.65;
};

{
    temp();

    a: bool;

    @no_fold;
    a := 2 > 1;

    @no_fold;
    b := !a;

    z: u32;

    @no_fold;
    z := (cast<u32>(15) * (2 shl 4)) * (6 + 4);

    error_message := "expected z == 5120";
    assert(z == 5120, address_of(error_message));
};