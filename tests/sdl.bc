        bytes_per_pixel:u8;
        padding:        u16;
        rmask:          u32;
        gmask:          u32;
        bmask:          u32;
        amask:          u32;
        rloss:          u8;
        gloss:          u8;
        bloss:          u8;
        aloss:          u8;
        rshift:         u8;
        gshift:         u8;
        bshift:         u8;
        ashift:         u8;
        refcount:       s32;
        next:           ^Pixel_Format;
    };

