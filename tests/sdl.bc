        x: s32;
        y: s32;
    };

    Rect    :: struct {
        x: s32;
        y: s32;
        w: s32;
        h: s32;
    };

    Window  :: struct {};

    Surface :: struct {
        flags:      u32;
        format:     ^Pixel_Format;
        w:          s32;
        h:          s32;
