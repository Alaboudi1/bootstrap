@library "basecode";
#foreign print ::= proc(format: string, values: ...any) @alias "fmt_print";

range ::= ns {
    kinds  ::= ns {
        INCLUSIVE ::= 0;
        EXCLUSIVE ::= 1;
    };

    orders ::= ns {
        NORMAL    ::= 0;
        REVERSE   ::= 1;
    };
};

assert ::= proc(predicate: bool, message: string) {
    if !predicate {
        print("%s\n", message);
        #assembly {{ exit }};
    };
};