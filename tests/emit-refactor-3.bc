core :: module("core");

test :: proc() {
    foo: u32;
    bar: u8 := 2;

    foo := 3;
    foo *:= cast<u32>(bar) + 4;

    ptr_to_foo := address_of(foo);

    core::print("foo := %d\n", foo);
    core::print("ptr_to_foo := %016llX\n", ptr_to_foo);
};

#run {
    test();
    core::print("\nrun\n");
};