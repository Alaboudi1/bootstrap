core :: module("../modules/core");

#run {
    msg: string;
    assign_string(address_of(msg), "hello world", 11);

    temp: string;
    temp := msg;

    with temp {
        print("temp.length   := %d\n", .length);
        print("temp.capacity := %d\n", .capacity);
    };

    one :: struct {
        a: two;
    };

    two :: struct {
        b: three;
    };

    three :: struct {
        c: string;
    };

    x: one;

    with x {
        with .a {
            with .b {
                .c := msg;
                with .c {
                    print(".length   := %d\n", .length);
                    print(".capacity := %d\n", .capacity);
                    print(".data     := '%s'\n", .data);
                };
            };
        };
    };
};