public :: ns {
    exit   :: proc(level: s32) {
        #assembly {{
            load.dw i63, fp, local(level)
            push.dw i63
            jmp.qw  _finalizer
        }};
    };

    assert :: proc(predicate: bool, message: string) {
        if !predicate {
            print("%s\n", message.data);
            exit(1);
        };
    };
};