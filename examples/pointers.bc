// what to do about pointers

pointer::examples := ns {
    my_precious := struct {
        x: u16;
        y: u16;
    };

    buffer_size, buffer: address := alloc(size_of(my_precious));
    defer free(buffer);
    while buffer < buffer + buffer_size {
        view buffer as ptr: u8 {
            ptr := $20;
        };
        buffer := buffer + 1;
    };
};